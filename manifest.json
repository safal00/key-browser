{
  "name": "ECSD Kiosk Browser",
  "short_name": "Kiosk Browser",
  "description": "A kiosk application for accessing Personal emails.",
  "version": "1.0",
  "manifest_version": 2,
  "background_color": "#ffffff",
  "theme_color": "#ffffff",
  "icons": [
    {
      "src": "assets/icon.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "assets/icon.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "permissions": [
    "alarms",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js", "service-worker.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "index.html",
    "app.html",
    "logout.html",
    "assets/*"
  ],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
  "start_url": "index.html",
  "display": "standalone",
  "orientation": "any"
}
