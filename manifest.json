{
  "name": "ECSD Kiosk Browser",
  "short_name": "Kiosk Browser",
  "description": "A kiosk application for accessing Personal emails.",
  "version": "1.0",
  "manifest_version": 2,
  "background_color": "#ffffff",
  "theme_color": "#ffffff",
  "icons": [
    {
      "src": "assets/icon.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "assets/icon.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "browserPrivate"  
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["app.html"]
}
